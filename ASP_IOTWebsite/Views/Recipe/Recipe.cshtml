<h3 style="padding-top:10px;">Add New Recipe:</h3>
<div class="col-sm-12">
    <div class="form-group">
        <label class="col-md-2 control-label">Recipe Name :</label>
        <div class="col-md-10">
            <input id="txtRecName" class="form-control" type="text" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Recipe Category :</label>
        <div class="col-md-10">
            <select id="ddRecCat" class="form-control">
                <option value="Breakfast">Breakfast</option>
                <option value="Confectionary">Confectionary</option>
                <option value="Fast Food">Fast Food</option>
                <option value="Salad">Salad</option>
                <option value="Side Dish">Side Dish</option>
                <option value="Grilled Food">Grilled Food</option>
            </select>
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label"> Select Ingredient :</label>
        <div class="col-md-3">
            <select id="ddchkIngredients" class="form-control">
                <option value="Beef">Beef</option>
                <option value="Bun">Bun</option>
                <option value="Butter">Butter</option>
                <option value="Cheese">Cheese</option>
                <option value="Chocolate">Chocolate</option>
                <option value="Flour">Flour</option>
                <option value="Macaroni">Macaroni</option>
                <option value="Milk">Milk</option>
                <option value="Pepperoni">Pepperoni</option>
                <option value="Ranch">Ranch</option>
                <option value="Sugar">Sugar</option>
                <option value="Tomatoes">Tomatoes</option>
                <option value="Vanilla">Vanilla</option>
                <option value="NA">NA</option>
            </select>
        </div>
        <label class="col-md-1 control-label">Amount:</label>
        <div class="col-md-2">
            <input type="number" id="txtValue" class="form-control"/>
        </div>
        
        <div class="col-md-4 pull-left"><button id="btnAdd">Add Ingredient to Recipe</button></div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Ingredients of the Recipe :</label>
        <div class="col-md-10">
            <input id="txtRecIngred" class="form-control" type="text" readonly/>
        </div>
    </div>
    <br />

    @* ERROR HIDDEN CODE *@
    <div class="form-group" style="visibility:hidden">
        <label class="">Recipe Composition :</label>
        <div class="">
            <input id="" class="form-control" type="text" readonly />
        </div>
    </div>
    
</div>

<div class="col-sm-12">
    <div class="form-group">
        <label class="col-md-2 control-label">Recipe Composition :</label>
        <div class="col-md-10">
            <input id="txtRecComp" class="form-control" type="text" readonly />
        </div>
    </div>
</div>

<div class="col-sm-12">
    <button type="submit" id="btnAddRecipe">Add Recipe</button>
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
    @Scripts.Render("~/Scripts/Page Scripts/Recipe.js")
}